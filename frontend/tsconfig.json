{
  "compilerOptions": {
    /* === Output & Module System === */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* === JSX & React Support === */
    "jsx": "react-jsx",

    /* === Path & Module Resolution === */
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /* === Strictness & Safety === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Build Output (Vite handles bundling) === */
    "noEmit": true,
    
    /* === Optional project structure === */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* === NEW: Fix Buffer & globalThis errors === */
    "types": ["node"],                    // Allows Buffer from node types
    "typeRoots": ["./node_modules/@types", "./src/types"]  // Include custom types
  },
  "include": [
    "src",
    "src/types/global.d.ts"               // <-- NEW: Include custom global types
  ],
  "exclude": ["node_modules", "dist"]
}